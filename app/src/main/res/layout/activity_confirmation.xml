<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".ConfirmationActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Confirmation"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <!-- Food Name -->
    <TextView
        android:id="@+id/foodNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Name: Batagor"
        android:textSize="18sp"
        android:padding="12dp"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"/>

    <!-- Number of Servings -->
    <TextView
        android:id="@+id/servingsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of Servings: 2"
        android:textSize="18sp"
        android:padding="12dp"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"/>

    <!-- Ordering Name -->
    <TextView
        android:id="@+id/orderingNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ordering Name: Usep"
        android:textSize="18sp"
        android:padding="12dp"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"/>

    <!-- Additional Notes -->
    <TextView
        android:id="@+id/notesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Additional Notes: Tidak Pedas"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Thank you message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank you for your order. Please wait for delivery by the nearest courier."
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="12dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp"/>

    <!-- Back to Menu Button -->
    <Button
        android:id="@+id/backtoMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Menu"
        android:textColor="#FFFFFF"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:padding="12dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"/>
</LinearLayout>
